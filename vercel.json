{
  "version": 2,
  "builds": [
    { "src": "public/**/*.html", "use": "@vercel/static" },
    { "src": "public/**/*.js", "use": "@vercel/static" },
    { "src": "public/**/*.css", "use": "@vercel/static" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/employeelogin.html" },
    { "src": "/forgotpassword.html", "dest": "/public/forgotpassword.html" },
    { "src": "/employeedashboard.html", "dest": "/public/employeedashboard.html" }
  ]
}
