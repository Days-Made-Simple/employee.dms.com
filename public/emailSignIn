    <form class="form" onsubmit="event.preventDefault();sendSignInLink()">
      <label for="email">Email Address</label>
      <input id="email" type="email" autocomplete="email" placeholder="example@daysmadesimple.com" required />

      <div class="actions">
        <button class="btn" type="submit">Send Sign-In Link</button>
        <a class="link" href="/">← Back to Sign In</a>
